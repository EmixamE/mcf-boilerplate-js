{
  "name": "@mcf/logger",
  "version": "0.4.7",
  "description": "Exposes a logger based on Winston. It includes formats and plugins for integration with the Morgan request logging library, and Zipkin request distributed tracing library.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --project ./tsconfig.json",
    "demo-print": "ts-node ./examples/print.ts",
    "demo-server": "ts-node ./examples/zipkin-server.ts",
    "demo-usage": "ts-node ./examples/usage/index.ts",
    "lint": "tslint -p . -t stylish",
    "svc:fluent": "docker-compose -f ./examples/usage/docker-compose.yml up -d; docker logs $(docker ps | grep fluent_mcf_logger_collator | cut -f 1 -d ' ') -f",
    "svc:fluent:stop": "docker-compose -f ./examples/usage/docker-compose.yml down",
    "test-watch": "npm test -- --watch --watch-extensions ts",
    "test": "mocha --require ts-node/register \"src/*.test.ts\" \"src/**/*.test.ts\"",
    "prestart": "npm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/GovTechSG/mcf-boilerplate-js.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "fluent-logger": "^3.0.0",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@mcf/server-boilerplate-middleware": "^0.8.5",
    "@types/chai": "4.1.4",
    "@types/logform": "1.2.0",
    "@types/mocha": "5.2.5",
    "@types/sinon": "5.0.1",
    "@types/sinon-chai": "3.2.0",
    "@types/winston": "2.3.9",
    "express": "^4.16.3",
    "morgan": "^1.9.0",
    "nodemon": "^1.18.3",
    "npx": "^10.2.0",
    "prettier": "1.13.7",
    "ts-node": "7.0.0",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.13.0",
    "tslint-eslint-rules": "5.3.1",
    "tslint-no-unused-expression-chai": "0.1.3",
    "tslint-plugin-prettier": "1.3.0",
    "typescript": "2.9.2",
    "zipkin": "^0.13.0",
    "zipkin-context-cls": "^0.13.0",
    "zipkin-instrumentation-express": "^0.13.0",
    "zipkin-transport-http": "^0.14.0"
  }
}
