{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es5",
      "es2015"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "esModuleInterop": true,
    "target": "es5"
  },
  "include": [
    "./src/**/*",
    "./src/*"
  ]
}